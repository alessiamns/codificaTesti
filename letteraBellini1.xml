    <text type="letter" xml:id="LL1.16text">
        <body xml:lang="ita">
            <div type="dateline" n="0">
                <lb xml:id="LL1.16_lb0" n="0"/>
                <dateline>
                    <date when="">Juin 26</date>:
					<placeName>Puteau</placeName> –
                    <address>N:° 19 by rampe </address>
                    <lb xml:id="LL1.16_lb1" n="1"/>
                    <hi rend="underline align(right)">
						<placeName>de Neuilly</placeName>
					</hi>
                </dateline>
            </div>
            <div type="letter-body" n="1">
                <s n="s0">
                    <lb xml:id="LL1.16_lb2" n="2"/>
                    <hi rend="align(left)">Mio caro <persName>Carluccio</persName></hi>
                </s>
                <s type="sentence" n="s1">
                    <lb xml:id="LL1.16_lb3" n="3"/>
                    Avendo steso l'intero duetto
                    <lb xml:id="LL1.16_lb4" n="4"/>
                    e mancando in esso qualche
                    <lb xml:id="LL1.16_lb5" n="5"/>
                    cosetta, desidererei che tu
                    <lb xml:id="LL1.16_lb6" n="6"/>
                    t'incommodassi a venire a'
                    <lb xml:id="LL1.16_lb7" n="7"/>
                    <placeName>Puteau</placeName> per tutto fissare, e
                    <lb xml:id="LL1.16_lb8" n="8"/>
                    nell'istesso tempo dammi la
                    <lb xml:id="LL1.16_lb9" n="9"/>
                    sortita di <persName>Rubini</persName>, se è <w>termi
                    <lb xml:id="LL1.16_lb10" n="10" break="no"/>
                    nata</w>.
                </s>
                <s type="sentence" n="s2"> T'aspetto in qual giorno
                    <lb xml:id="LL1.16_lb11" n="11"/>
                    ed in qual'ora vorrai.
                </s>
                <s type="sentence" n="s3">
                    - Addio
                </s>
            </div>
            <div type="letter-closer" n="2">
                <s type="sentence" n="s4">
                    <lb xml:id="LL1.16_lb12" n="12"/>
                    Il tuo <hi rend="underline"><person>Vincenzillo</person></hi>
                </s>
            </div>
        </body>
    </text>
