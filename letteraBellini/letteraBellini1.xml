    <text xml:lang="ita" type="letter" xml:id="LL1.16text">
        <front> 
            <pb n="4" xml:id="LL1.16_front1_front" facs="#surf_4_LL1.16" /> <!-- FRONTE VERSO front-->
            <div type="sent" n="s4_div1">
                <ab> <!-- blocco con timbro del mittente con data-->
                    <stamp type="postage"  facs="#LL1.16_s4_hotspot2"> 
                        <mentioned>
                            <placeName>NEUILLY - SUR - SEINE</placeName>
							<date when="1834-06-27"> 27  JUIN 1834 </date>
                        </mentioned>
                    </stamp>
                </ab>
            </div>
            <div type="destination" n="s4_div2">
                <ab> <!-- blocco con timbro del destinatario con data-->
                    <stamp type="postage" facs="#LL1.16_s4_hotspot1 #LL1.16_s4_hotspot3">
                        <placeName>
                            <unclear reason="illegible"></unclear>
                        </placeName>
                        <date when="1834-06-27"> 27
							<unclear reason="illegible"> juin </unclear> 1834
						</date>
                    </stamp>
                </ab>
                <ab> <!-- blocco con informazioni del destinatario-->
                    <address type="receiver">
                        <lb xml:id="LL1.16_s4_lb1" facs="#LL1.16_s4_line1"/>
                        <addrLine>à Monsieur</addrLine>
                        <lb xml:id="LL1.16_s4_lb2" facs="#LL1.16_s4_line2"/>
                        <addrLine>onsieur le Comte <persName>Pepoli</persName></addrLine>
                        <lb xml:id="LL1.16_s4_lb3" facs="#LL1.16_s4_line3"/>
                        <addrLine>N:° 1: passage des petits Pères</addrLine>
                        <lb xml:id="LL1.16_s4_lb4" facs="#LL1.16_s4_line4"/>
                        <addrLine> à <placeName>Paris</placeName></addrLine>
                    </address>
                </ab>
            </div>
        </front>

        <body>
            <pb n="1" xml:id="LL1.16_front2" facs="#surf_1_LL1.16" /> <!-- FRONTE RECTO -->
            <div type="dateline" n="s1_div1">
                <ab> <!-- blocco con informazioni di luogo e data della lettera-->
                    <lb xml:id="LL1.16_s1_lb0" n="0" facs="#LL1.16_s1_line1"/>
                    <dateline>
                        <date>Juin 26</date>:
                        <placeName>Puteau</placeName> –
                        <address>N:° 19 by rampe </address>
                        <lb xml:id="LL1.16_s1_lb1" n="1" facs="#LL1.16_s1_line2"/>
                        <hi rend="underline align(right)">
                            <placeName>de Neuilly</placeName>
                        </hi>
                    </dateline>
                </ab>
            </div>
            <div type="letter-body" n="s1_div2"> 
                <ab> <!-- blocco incipit lettera-->
                    <s type="sentence" n="s0">
                        <lb xml:id="LL1.16_s1_lb2" n="2" facs="#LL1.16_s1_line3"/>
                        <hi rend="align(left)">Mio caro <persName>Carluccio</persName></hi>
                    </s>
                </ab>
                <ab> <!-- blocco corpo lettera-->
                    <s type="sentence" n="s1">
                        <lb xml:id="LL1.16_s1_lb3" n="3" facs="#LL1.16_s1_line4"/>
                        Avendo steso l'intero duetto
                        <lb xml:id="LL1.16_s1_lb4" n="4" facs="#LL1.16_s1_line5"/>
                        e mancando in esso qualche
                        <lb xml:id="LL1.16_s1_lb5" n="5" facs="#LL1.16_s1_line6"/>
                        cosetta, desidererei che tu
                        <lb xml:id="LL1.16_s1_lb6" n="6" facs="#LL1.16_s1_line7"/>
                        t'incommodassi a venire a'
                        <lb xml:id="LL1.16_s1_lb7" n="7" facs="#LL1.16_s1_line8"/>
                        <placeName>Puteau</placeName> per tutto fissare, e
                        <lb xml:id="LL1.16_s1_lb8" n="8" facs="#LL1.16_s1_line9"/>
                        nell'istesso tempo dammi la
                        <lb xml:id="LL1.16_s1_lb9" n="9" facs="#LL1.16_s1_line10"/>
                        sortita di <persName>Rubini</persName>, se è <w>termi
                        <lb xml:id="LL1.16_s1_lb10" n="10" break="no" facs="#LL1.16_s1_line11"/>
                        nata</w>.
                    </s>
                    <s type="sentence" n="s2"> T'aspetto in qual giorno
                        <lb xml:id="LL1.16_s1_lb11" n="11" facs="#LL1.16_s1_line12"/>
                        ed in qual'ora vorrai.
                    </s>
                    <s type="sentence" n="s3">
                        - Addio
                    </s>
                </ab>
            </div>
            <div type="letter-closer" n="s1_div3">
                <ab> <!-- blocco saluti finali lettera-->
                    <s type="sentence" n="s4">
                        <lb xml:id="LL1.16_s1_lb12" n="12" facs="#LL1.16_s1_line13"/>
                        Il tuo <hi rend="underline"><person>Vincenzillo</person></hi>
                    </s>
                </ab>
            </div>
            <div> 
                <pb n="2" xml:id="LL1.16_back1" facs="#surf_2_LL1.16" /> <!-- RETRO RECTO -->
            </div>
            <div> 
                <pb n="3" xml:id="LL1.16_back2" facs="#surf_3_LL1.16" /> <!-- RETRO VERSO -->
            </div>
